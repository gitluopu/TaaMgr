<UserControl x:Class="TaaConf.TaaConfCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaaConf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="confName">
            <TextBlock Text="{Binding m_name}" MinWidth="100"/>
        </DataTemplate>
        <DataTemplate x:Key="confValue">
            <TextBox Text="{Binding m_value}" MinWidth="200"/>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel>
        <ListView  ItemsSource="{Binding m_confs}" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="name" CellTemplate="{StaticResource confName}" />
                    <GridViewColumn Header="value" CellTemplate="{StaticResource confValue}" />
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal">
            <Button Content="hello" Width="80" Margin="5"></Button>
            <Button Content="world" Width="80" Margin="5"></Button>
        </StackPanel>
    </StackPanel>
</UserControl>
